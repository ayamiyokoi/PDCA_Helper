<!DOCTYPE html>
<html>
  <head>
    <title>PDCAHelper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
            <% if user_signed_in? %>
              <li><%= link_to "Today's reflection", new_reflection_path,style: "color:white;" %></li>
              <li><%= link_to "My team", groups_path, style: "color:white;" %></li>
              <li><%= link_to "Users", users_path, style: "color:white;" %></li>
              <li><%= link_to "My page", reflections_path, style: "color:white;" %></li>
              <li><%= link_to "Topics", topics_path, style: "color:white;" %></li>
              <li><%= link_to "Favorite Topics", favorites_path, style: "color:white;" %></li>
              <li>><%= link_to "logout", destroy_user_session_path, method: :delete, style: "color:white;" %></li>
            <% else %>
              <li><%= link_to "Home", "/", style: "color:white;" %></li>
              <li><%= link_to "sign up", new_user_registration_path, style: "color:white;" %></li>
              <li><%= link_to "login", new_user_session_path, style: "color:white;" %></li>
            <% end %>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>
