
<p id="notice"><%= notice %></p>
<p>
  <strong>Goal:</strong>
  <%= @reflection.goal %>
</p>

<p>
  <strong>Result:</strong>
  <%= @reflection.result %>
</p>

<p>
  <strong>Biggergoal:</strong>
  <%= @reflection.biggergoal %>
</p>

<p>
  <strong>Plan:</strong>
  <%= @reflection.plan %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @reflection.topic %>
</p>

<p>
  <strong>Overall:</strong>
  <%= @reflection.overall %>
</p>

<%= link_to 'Edit', edit_reflection_path(@reflection) %> |
<%= link_to 'Back', reflections_path %>

<div class="comments">
<p>コメント件数：<%= @reflection.post_comments.count %></p>
<% @reflection.post_comments.each do |post_comment| %>
  <p><%= image_tag('sample-author1.jpg') %></p>
  <%= post_comment.user.name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@reflection, @post_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>
