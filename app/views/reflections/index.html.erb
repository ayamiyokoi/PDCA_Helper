<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">
<div class="col-md-4">
  自己紹介
   <p><%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></p>
      <p>name: <%= @user.name %></p>
      <p>email: <%= @user.email %></p>
      <% if @user == current_user %>
      <p><%= link_to 'Edit', edit_user_registration_path(@user) %></p>
      <% end %>
</div>
<div class="col-md-4">
  <p>目標と達成率</p>
  <%= @reflection.biggergoal %>
</div>
<div class="col-md-4">
  <p>今日の目標と結果</p>
  <p>目標<br><%= @reflection.goal %></p>
  <p>結果<br><%= @reflection.result %></p>
</div>
</div>

<div class="row">
  <div class="col-md-6">
    今日の結果(プラン）
  </div>
  <div class="col-md-6">
    明日の予定(プラン）
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <p>本日のトピック</p>
    <%= @reflection.topic %>
  </div>
  <div class="col-md-6">
    <p>本日の総括</p>
    <%= @reflection.overall %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
<h1>本日の反省</h1>

<table>
  <thead>
    <tr>
      <th>プレイヤー</th>
      <th>本日の目標</th>
      <th>本日の結果</th>
      <th>定性目標</th>
      <th>予定</th>
      <th>本日のトピック</th>
      <th>本日の総括</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reflections.each do |reflection| %>
      <tr>
        <td><%= attachment_image_tag reflection.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %><%= reflection.user.name %></td>
        <td><%= reflection.goal %></td>
        <td><%= reflection.result %></td>
        <td><%= reflection.biggergoal %></td>
        <td><%= reflection.plan %></td>
        <td><%= reflection.topic %></td>
        <td><%= reflection.overall %><br><%= link_to "#{reflection.post_comments.count} コメント", reflection_path(reflection.id) %></td>
        <td><%= link_to 'Show', reflection %></td>
        <td><%= link_to 'Edit', edit_reflection_path(reflection) %></td>
        <td><%= link_to 'Destroy', reflection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to '本日の反省', new_reflection_path, class: "btn btn-outline-secondary" %></p>

</div>
</div>
</div>
