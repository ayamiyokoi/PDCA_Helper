<p id="notice"><%= notice %></p>

<h1>Rflections</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Result</th>
      <th>Biggergoal</th>
      <th>Plan</th>
      <th>Topic</th>
      <th>Overall</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rflections.each do |rflection| %>
      <tr>
        <td><%= rflection.goal %></td>
        <td><%= rflection.result %></td>
        <td><%= rflection.biggergoal %></td>
        <td><%= rflection.plan %></td>
        <td><%= rflection.topic %></td>
        <td><%= rflection.overall %></td>
        <td><%= link_to 'Show', rflection %></td>
        <td><%= link_to 'Edit', edit_rflection_path(rflection) %></td>
        <td><%= link_to 'Destroy', rflection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

