<p id="notice"><%= notice %></p>

<h1>Reflections</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Result</th>
      <th>Bigger goal</th>
      <th>Plan</th>
      <th>Topic</th>
      <th>Overall</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reflections.each do |reflection| %>
      <tr>
        <td><%= reflection.goal %></td>
        <td><%= reflection.result %></td>
        <td><%= reflection.biggergoal %></td>
        <td><%= reflection.plan %></td>
        <td><%= reflection.topic %></td>
        <td><%= reflection.overall %></td>
        <td><%= link_to 'Show', reflection %></td>
        <td><%= link_to 'Edit', edit_reflection_path(reflection) %></td>
        <td><%= link_to 'Destroy', reflection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

