<div class="container">
  <h1>お気に入り  <i class="fas fa-thumbs-up"></i></h1>
  <table>
    <thead>
      <tr>
        <th>トピック</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>

      <% if @favorite_list.present? %>
      <% @favorite_list.each do |post| %>
        <tr>
          <td><%= post.topic %></td>
          <td><%= link_to '詳細画面', reflection_favorites_path(post.id), class: "btn btn-outline-secondary" %></td>
        </tr>
      <% end %>
      <% end %>

    </tbody>
  </table>
</div>
