<div>
  <p>
  <strong>トピック</strong>
  <%= @reflection.topic_name %>
   <%= @reflection.topic %>
</p>

<%= link_to '編集', edit_reflection_path(@reflection), class: "btn btn-outline-success" %>
<%= link_to '戻る', reflections_path, class: "btn btn-outline-secondary" %>

<div>
<% if @reflection.favorited_by?(current_user) %>
    <p>
      <%= link_to reflection_favorites_path(@reflection), method: :delete do %>
        ♥<%= @reflection.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to reflection_favorites_path(@reflection), method: :post do %>
        ♡<%= @reflection.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
</div>
</div>