<div class="container">
      <div class="row">
            <div class="col-md-3">
                  <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
            </div>
            <div class="col-md-9">
            <ul>
                  <li>名前<br><%= @user.name %></li>
                  <li>メールアドレス<br><%= @user.email %></li>
                  <li><% if @user == current_user %>
                      <%= link_to '編集', edit_user_registration_path(@user), class: "btn btn-outline-success" %>
                      <% end %>
                      <%= link_to '戻る', users_path, class: "btn btn-outline-secondary" %></li>
            </ul>
            </div>
      </div>
</div>


